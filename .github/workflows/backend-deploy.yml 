name: Deploy to EC2

on:
  push:
    branches:
      - master

env:
  APP_DIR: /home/ubuntu/app
  IMAGE_NAME: coffeespace-backend

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Load .env variables
        run: |
          set -o allexport
          source .env
          set +o allexport

      - name: Set up Docker
        uses: docker/setup-buildx-action@v3

      - name: Build Docker image
        run: docker build -t $IMAGE_NAME .

      - name: Archive backend files
        run: tar -czf deploy_package.tar.gz backend/ docker-compose.yml deploy.sh

      - name: Write SSH key to file
        run: |
          echo "$EC2_KEY" > /tmp/deploy_key.pem
          chmod 600 /tmp/deploy_key.pem

      - name: Copy files to EC2
        uses: appleboy/scp-action@v0.1.7
        with:
          host: $EC2_HOST
          username: $EC2_USER
          key_path: /tmp/deploy_key.pem
          source: deploy_package.tar.gz,deploy.sh
          target: $APP_DIR
          port: 22

      - name: Run deploy script on EC2
        uses: appleboy/ssh-action@v0.1.6
        with:
          host: $EC2_HOST
          username: $EC2_USER
          key_path: /tmp/deploy_key.pem
          port: 22
          script: |
            cd $APP_DIR
            tar -xzf deploy_package.tar.gz
            chmod +x deploy.sh
            ./deploy.sh
